<%= form_with(model: @story, local: true, html: { multipart: true, class: "card p-4 shadow-sm" }) do |form| %>

  <% if @story.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h4>
      <ul>
        <% @story.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter story title" %>
  </div>

  <div class="mb-3">
    <%= form.label :cover_image, class: "form-label" %>
    <%= form.file_field :cover_image, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 5, placeholder: "Write a short description..." %>
  </div>

  <div class="mb-3">
    <%= form.label :language, class: "form-label" %>
    <%= form.select :language, options_for_select(["Amharic", "Oromo", "Tigrigna", "Afar", "Somali", "Sidamo", "Wolaytta", "Gurage"], @story.language), { prompt: "Select a language" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :category, class: "form-label" %>
    <%= form.select :category, options_for_select(["Folktale", "Spiritual", "Historical", "Proverb", "Legend"], @story.category), { prompt: "Select a category" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :audio_file, class: "form-label" %>
    <%= form.file_field :audio_file, class: "form-control" %>
  </div>

  <div class="d-grid">
    <%= form.submit "Save Story", class: "btn btn-primary" %>
  </div>

<% end %>
