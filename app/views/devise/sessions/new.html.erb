<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow p-4" style="width: 100%; max-width: 400px;">
    <div class="text-center mb-4">
     
      <h3 class="fw-bold">Sign in to WubStory</h3>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-grid mb-3">
        <%= f.submit "Sign in", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none" %>
    </div>

    <hr>

    <div class="text-center">
      <p class="mb-0">New to WubTeret?</p>
      <%= link_to "Create an account", new_registration_path(resource_name), class: "btn btn-outline-secondary btn-sm mt-2" %>
    </div>
  </div>
</div>
