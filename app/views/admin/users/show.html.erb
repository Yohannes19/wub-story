<div class="user-details">
    <h1>User Details</h1>
    <p><strong>Name:</strong> <%= @user.username %></p>
    <p><strong>Email:</strong> <%= @user.email %></p>
    <p><strong>Role:</strong> <%= @user.role %></p>
    <p><strong>Created At:</strong> <%= @user.created_at.strftime("%B %d, %Y") %></p>
    <p><strong>Updated At:</strong> <%= @user.updated_at.strftime("%B %d, %Y") %></p>

    <div class="actions">
        <%= link_to 'Edit User', edit_admin_user_path(@user), class: 'btn btn-primary' %>
        <%= link_to 'Back to Users', admin_users_path, class: 'btn btn-secondary' %>
    </div>
</div>