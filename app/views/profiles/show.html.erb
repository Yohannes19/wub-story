<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">

      <div class="card shadow-lg p-4">

        <div class="d-flex flex-column align-items-center text-center">
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image.variant(resize_to_fill: [150, 150]), class: "rounded-circle mb-3", alt: "Profile Image" %>
          <% else %>
            <%= image_tag 'logo1.png', class: "rounded-circle mb-3", alt: "Default Profile Image", size: "150x150" %>
          <% end %>

          <h3><%= @user.username.presence || "Unnamed User" %></h3>
          <p class="text-muted"><%= @user.email %></p>

          <p><i class="bi bi-geo-alt-fill"></i> <%= @user.location || "Location not set" %></p>

          <div class="mt-3">
            <%= link_to "Edit Profile", edit_profile_path(@user), class: "btn btn-primary" %>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>
