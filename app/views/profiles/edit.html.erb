<div class="container mt-5">
<h2>Edit Profile</h2>

<%= form_with model: @user, url: profile_path(@user), method: :patch, local: true do |form| %>
    <div class="mb-3">
    <%= form.label :username %>
    <%= form.text_field :username, class: "form-control" %>
    </div>

    <div class="mb-3">
    <%= form.label :location %>
    <%= form.text_field :location, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :bio %>
      <%= form.text_area :bio, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :profile_image %>
      <%= form.text_field :profile_image, class: "form-control" %>
    </div>

    <%= form.submit "Save Changes", class: "btn btn-primary" %>
  <% end %>
</div>
